{
  "name": "wpdiggerstudio/wpzylos-security",
  "description": "Security primitives (Nonce, Gate, Sanitizer, Escaper) for WPZylos framework",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "wordpress",
    "wpzylos",
    "security",
    "nonce",
    "sanitization",
    "escaping",
    "authorization"
  ],
  "homepage": "https://github.com/WPDiggerStudio/wpzylos-security",
  "authors": [
    {
      "name": "WPDiggerStudio",
      "email": "diggerwp@gmail.com",
      "homepage": "https://github.com/WPDiggerStudio",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/WPDiggerStudio/wpzylos-security/issues",
    "source": "https://github.com/WPDiggerStudio/wpzylos-security",
    "docs": "https://wpzylos.com/docs/latest/packages/wpzylos-security"
  },
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "wpdiggerstudio/wpzylos-core": "^1.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9.6 || ^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "szepeviktor/phpstan-wordpress": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "WPZylos\\Framework\\Security\\": "src/"
    },
    "files": ["src/helpers.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "WPZylos\\Framework\\Security\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyze": "phpstan analyze",
    "cs": "phpcs --standard=PSR12 src",
    "cs-fix": "phpcbf --standard=PSR12 src",
    "qa": ["@cs", "@analyze", "@test"]
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.0.2"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "funding": [
    {
      "type": "paypal",
      "url": "https://www.paypal.com/donate/?hosted_button_id=66U4L3HG4TLCC"
    }
  ]
}